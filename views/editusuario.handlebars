<h1>Edite seu usuario</h1>
<form action="/usuarios/updateusuario" method="post">
    <input type="hidden" name="id" value="{{usuario.id}}">
    <div class="form-control">
        <label for="nome">Nome:</label>
        <input type="text" name="nome" placeholder="Digite seu nome" value="{{usuario.nome}}" required>
    </div>
    <div class="form-control">
        <label for="email">Email:</label>
        <input type="text" name="email" placeholder="Digite seu email" value="{{usuario.email}}" required>
    </div>
    <div class="form-control">
        <label for="fone">Fone:</label>
        <input type="text" name="fone" placeholder="Digite seu telefone" value="{{usuario.fone}}" required>
    </div>
    <div class="form-control">
        <label for="data_nascimento">Data de Nascimento:</label>
        <input type="date" name="data_nascimento" placeholder="Digite sua data de nascimento" value="{{usuario.data_nascimento}}" required>
    </div>
    <input type="submit" value="Editar">
</form>